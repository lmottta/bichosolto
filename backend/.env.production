# Configurações do Servidor
PORT=5000
NODE_ENV=production
API_URL=${API_URL}
RESET_DB=false

# Configurações do Banco de Dados PostgreSQL
DB_HOST=postgres-production-56cd.up.railway.app
DB_PORT=5432
DB_NAME=bicho_solto_db
DB_USER=postgres
# DB_PASSWORD deve ser configurado no painel do Railway

# Configurações de Autenticação JWT
# JWT_SECRET deve ser configurado no painel do Railway
JWT_EXPIRES_IN=7d

# Configurações de Upload de Arquivos
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880 # 5MB em bytes

# Nota: As variáveis sensíveis como DB_PASSWORD e JWT_SECRET
# devem ser configuradas diretamente no painel do Railway
# e não devem ser incluídas em arquivos de configuração versionados