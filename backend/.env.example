# Configurações do Servidor
PORT=5000
NODE_ENV=production

# Configurações do Banco de Dados PostgreSQL
# No Railway, estas variáveis são automaticamente fornecidas como DATABASE_URL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bicho_solto_db
DB_USER=postgres
DB_PASSWORD=postgres

# Configurações de Autenticação JWT
JWT_SECRET=animal_rescue_hub_secret_key_change_in_production
JWT_EXPIRES_IN=7d

# Configurações de Upload de Arquivos
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880 # 5MB em bytes

# URL da API para acesso externo
API_URL=https://seu-app-backend-url.railway.app

# Configuração Railway específica para banco de dados
# DATABASE_URL será automaticamente fornecido pelo Railway 