{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "watchPatterns": [
      "docker-compose.railway.yml"
    ]
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "docker-compose -f docker-compose.railway.yml up",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}